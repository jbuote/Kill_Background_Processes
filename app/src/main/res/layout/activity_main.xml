<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pwbs.killbackgroundprocesses.MainActivity">

    <TextView
        android:text="@string/main_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tips"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_package_name"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_tips"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Kill Background Processes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Kill_Process"
        android:layout_below="@+id/sp_package_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_package_name"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/sp_package_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:minWidth="100dp"
        android:hint="Enter Package Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/tv_version" />
</RelativeLayout>
